<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>レシピ作成</h1>
      <h2>材料</h2>
        <%= form_with(model: @recipe, local: true) do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, value: @recipe.title %>
          </div>
          <div class="form-group">
            <%= f.label :genre %>
            <%= f.select :genre, Recipe.genres_i18n.invert, { include_blank: "ジャンルを選択してください" }, class: 'form-control', id: 'recipe_genre' %>
          </div>
          <div class="form-group">
            <%= f.label :materials, "材料" %>
            <%= text_area_tag :materials, params[:materials], rows: 5, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :process, "作り方" %>
            <%= f.text_area :process, rows: 5, class: "form-control" , id: 'recipe_process' %>
          </div>
          <div class="form-group">
            <%= f.label :release %>
            <%= f.select :release, Recipe.releases_i18n.invert, {}, class: 'form-control', id: 'recipe_release' %>
          </div>
          <%= f.submit nil, class: "btn btn-primary" %>
          <%= link_to t('recipes.index.title'), recipes_path, class: "btn btn-secondary" %>
        <% end %>        
    </div>
  </div>
</div>
