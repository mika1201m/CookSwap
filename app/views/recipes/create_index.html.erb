
<div class="col-sm-12 col-lg-4 mb-3">
    <div class="card-body">
    <% @recipes.each do |recipe| %>  
        <div class="d-flex">
          <h4 class="card-title">
            <%= link_to recipe.title, recipe_path(recipe) %>
          </h4>
            <div class='ms-auto'>
              <%= link_to edit_recipe_path(recipe), id: "button-edit-#{recipe.id}" do %>
                <i class="bi bi-pencil-fill"></i>
              <% end %>
              <%= link_to recipe_path(recipe), id: "button-delete-#{recipe.id}", data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') } do %>
                <i class="bi bi-trash-fill"></i>
              <% end %>
            </div>
            <div>
            <% if recipe.in? %>
              <h1 class="btn btn-primary">投稿済</h1>
            <% end %>
          </div>  
        </div>
        <ul class="list-inline">
          <li><i class="bi bi-calendar"></i><%= l recipe.created_at, format: :short %></li>
        </ul> 
      </div>
    <% end %>
    </div>
  </div>
</div>