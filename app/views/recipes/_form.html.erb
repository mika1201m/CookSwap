<%= form_with model: @recipe, class: "needs-validation", local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', id: 'recipe_title' %>
  </div>
  <div class="form-group">
    <%= f.label :genre, class: "form-label" %>
    <%= f.select :genre, Recipe.genres_i18n.invert, { include_blank: "ジャンルを選択してください" }, class: 'form-control', id: 'recipe_genre' %>
  </div>
  <div class="form-group">
    <%= f.label :process, class: "form-label" %>
    <%= f.text_area :process, class: 'form-control', id: 'recipe_process', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :release, class: "form-label" %>
    <%= f.select :release, Recipe.releases_i18n.invert, {}, class: 'form-control', id: 'recipe_release' %>
  </div>
  <div class="text-center mt-4">
    <%= f.submit nil, class: 'btn btn-success mt-2' %>
    <%= link_to t('recipes.index.title'), recipes_path, class: "btn btn-secondary mt-2" %>
  </div>
<% end %>
