<% content_for(:title, t('.title')) %>
<div class="d-flex flex-column min-vh-100">
  <div class="container pb-4">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
      <h1 class="text-center mb-4 mt-5"><%= t('.title') %></h1>
      <%= form_with model: @contact, local: true, turbo: false, class: "needs-validation" do |f| %>
          <% if @contact.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <ul class="mb-0">
                <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                    <% end %>
              </ul>
            </div>
          <% end %>
      <div class="mb-3">
        <%= f.label :name,  class: 'form-label' %>
        <%= f.text_field :name, placeholder: "お名前", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :content,  class: 'form-label' %>
        <%= f.text_area :content, placeholder: "お問合せ内容を入力してください", class: "form-control", rows: 5 %>
      </div>

      <div class="text-center mt-4">
        <div class="d-grid gap-2">
          <%= f.submit t('helpers.submit.send'), class: 'btn btn-success mb-2' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
