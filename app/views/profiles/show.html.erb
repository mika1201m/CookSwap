<% content_for(:title, t('.title')) %>
<div class="d-flex flex-column min-vh-100">
  <div class="container pt-3 flex-grow-1">
    <div class="row">
      <div class="col-md-10 offset-md-1">
      <h1 class="text-center mb-4"><%= t('.title') %></h1>
      <table class="table">
          <tr>
            <th scope="row" class="h5"><%= User.human_attribute_name(:email) %></th>
            <td class="lead"><%= current_user.email %></td>
          </tr>
          <tr>
            <th scope="row" class="h5"><%= User.human_attribute_name(:name) %></th>
            <td class="lead"><%= current_user.name %></td>
          </tr>
          <tr>
            <th scope="row" class="h5"><%= User.human_attribute_name(:gender) %></th>
            <td class="lead"><%= current_user.gender_i18n %></td>
          </tr>
          <tr>
            <th scope="row" class="h5"><%= t('profiles.edit.post')%></th>
            <td class="lead"><%= current_user.recipes.count %></td>
          </tr>
        </table>
        <div class="text-center mt-4">
          <%= link_to t('helpers.submit.edit'), edit_profile_path, class: "btn btn-success btn-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>
