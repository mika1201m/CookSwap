<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:name) %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:gender) %></th>
          <td><%= current_user.gender_i18n %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('profiles.edit.post')%></th>
          <td><%= current_user.recipes.count %></td>
        </tr>
      </table>
      <%= link_to t('helpers.submit.edit'), edit_profile_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
