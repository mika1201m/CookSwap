<% content_for(:title, t('.title')) %>
<div class="d-flex flex-column min-vh-100">
  <div class="container pb-4">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <h1 class="text-center mb-4" style="font-size: 2rem;"><%= t('.title') %></h1>
          <%= form_with model: @user, url: profile_path, method: :put do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
              <div class="mb-3">
                <%= f.label :email, class: "form-label", style: "font-size: 1.25rem;" %>
                <%= f.email_field :email, class: "form-control", style: "font-size: 1.25rem;" %>
              </div>
              <div class="mb-3">
                <%= f.label :name, class: "form-label", style: "font-size: 1.25rem;" %>
                <%= f.text_field :name, class: "form-control", style: "font-size: 1.25rem;" %>
              </div>
              <div class="text-center mt-4">
                <%= f.submit class: "btn btn-outline-success mt-2", style: "font-size: 1.25rem;" %>
              </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
